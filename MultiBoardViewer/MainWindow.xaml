<Window x:Class="MultiBoardViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multi BoardViewer" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="App.ico"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#F0F0F0">
            <StackPanel.Margin>
                <Thickness>10,5,10,5</Thickness>
            </StackPanel.Margin>
            <Button x:Name="btnAddTab" Content="➕ New Tab" 
                    Click="BtnAddTab_Click" 
                    Padding="10,5" 
                    Margin="0,0,10,0"
                    Background="#4CAF50" 
                    Foreground="White" 
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <TextBlock Text="BoardViewer Path:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="txtBoardViewerPath" 
                     Width="400" 
                     VerticalAlignment="Center" 
                     Padding="5"
                     IsReadOnly="True"
                     Background="White"/>
            <Button Content="Browse..." 
                    Click="BtnBrowse_Click" 
                    Padding="10,5" 
                    Margin="5,0,0,0"
                    Cursor="Hand"/>
            
            <TextBlock x:Name="txtStatus" 
                       Text="" 
                       VerticalAlignment="Center" 
                       Margin="20,0,0,0" 
                       Foreground="Green"
                       FontWeight="Bold"/>
        </StackPanel>
        
        <!-- Tab Control -->
        <TabControl x:Name="tabControl" 
                    Grid.Row="1" 
                    Margin="0"
                    SelectionChanged="TabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid>
                                    <Border Name="Border" 
                                            Background="#E0E0E0" 
                                            BorderBrush="#999999" 
                                            BorderThickness="1,1,1,0" 
                                            CornerRadius="3,3,0,0"
                                            Padding="10,5"
                                            Margin="2,2,2,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{TemplateBinding Header}" 
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"/>
                                            <Button Content="✕" 
                                                    Width="18" 
                                                    Height="18"
                                                    FontSize="10"
                                                    Padding="0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#666666"
                                                    Cursor="Hand"
                                                    Click="CloseTab_Click"
                                                    Tag="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="Red"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
        </TabControl>
    </Grid>
</Window>
